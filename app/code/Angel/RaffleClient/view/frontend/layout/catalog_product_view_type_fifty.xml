<?xml version="1.0" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Angel_RaffleClient::css/countdown/timeTo.css"/>
        <css src="Angel_RaffleClient::css/countdown/timebox.css"/>
        <css src="Angel_RaffleClient::css/auctionbox.css"/>
    </head>
    <body>
        <referenceContainer name="product.info.main">
            <block class="Angel\RaffleClient\Block\Product\View" name="raffle.block" as="raffle.block" after="product.info.price" cacheable="false" template="Angel_RaffleClient::product/view.phtml"/>
        </referenceContainer>
        <referenceBlock name="product.info.addtocart">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Angel_RaffleClient::product/addtocart.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>