 */
?>
<?php if ($block->isRaffleFiftyProduct()): ?>
    <?php if (!$block->isRaffleFinished()): ?>
        <div><span id="fity_countdown" data-mage-init='{"angel/countdown": {"time_left":<?php echo $block->getRaffleTimeLeft() ?>}}'></span></div>
        <div><?= __('Current Pot: %1', $block->getCurrentPotFormated()) ?> </div>
    <?php else: ?>
        <div>
            <?php $_wonNumbers = $block->getRandomNumbers(); ?>
            <?php if ($_wonNumbers && count($_wonNumbers)): ?>
                <div class="table-wrapper orders-history">
                    <table class="data table table-order-items history" id="my-tickets-table">
                        <caption class="table-caption"><?= /* @escapeNotVerified */ __('Won Numbers') ?></caption>
                        <thead>
                        <tr>
                            <th scope="col" class="col name"><?= /* @escapeNotVerified */ __('Prize Name') ?></th>
                            <th scope="col" class="col order"><?= /* @escapeNotVerified */ __('Won Number') ?></th>
