<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">angel_raffleclient_test_form.test_form_data_source</item>
			<item name="deps" xsi:type="string">angel_raffleclient_test_form.test_form_data_source</item>
		</item>
		<item name="label" translate="true" xsi:type="string">General Information</item>
		<item name="config" xsi:type="array">
			<item name="dataScope" xsi:type="string">data</item>
			<item name="namespace" xsi:type="string">angel_raffleclient_test_form</item>
		</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
		<item name="buttons" xsi:type="array">
			<!--<item name="back" xsi:type="string">Angel\RaffleClient\Block\Adminhtml\Test\Edit\BackButton</item>-->
			<item name="save_and_continue" xsi:type="string">Angel\RaffleClient\Block\Adminhtml\Test\Edit\Distribution</item>
			<item name="save" xsi:type="string">Angel\RaffleClient\Block\Adminhtml\Test\Edit\SaveButton</item>
			<!--<item name="save_and_continue" xsi:type="string">Angel\RaffleClient\Block\Adminhtml\Test\Edit\SaveAndContinueButton</item>-->
		</item>
	</argument>
	<dataSource name="test_form_data_source">
		<argument name="dataProvider" xsi:type="configurableObject">
			<argument name="class" xsi:type="string">Angel\RaffleClient\Model\Test\DataProvider</argument>
			<argument name="name" xsi:type="string">test_form_data_source</argument>
			<argument name="primaryFieldName" xsi:type="string">test_id</argument>
			<argument name="requestFieldName" xsi:type="string">test_id</argument>
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="submit_url" path="*/*/save" xsi:type="url"/>
				</item>
			</argument>
		</argument>
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
	</dataSource>
	<fieldset name="General">
		<argument name="data" xsi:type="array">
			<item name="config" xsi:type="array">
				<item name="label" xsi:type="string"/>
			</item>
		</argument>
		<field name="Total">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="dataType" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Total</item>
					<item name="formElement" xsi:type="string">input</item>
					<item name="source" xsi:type="string">Test</item>
					<item name="sortOrder" xsi:type="number">200</item>
					<item name="dataScope" xsi:type="string">Total</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">true</item>
						<item name="validate-number" xsi:type="boolean">true</item>
						<item name="validate-greater-than-zero" xsi:type="boolean">true</item>
						<item name="less-than-equals-to" xsi:type="number">100000</item>
					</item>
					<item name="notice" translate="true" xsi:type="string">The total tickets purchased for each raffles. The number from 0 to total tickets subtract 1.</item>
				</item>
			</argument>
		</field>
		<field name="total_numbers">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="dataType" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Total Random Numbers</item>
					<item name="formElement" xsi:type="string">input</item>
					<item name="source" xsi:type="string">Test</item>
					<item name="sortOrder" xsi:type="number">210</item>
					<item name="dataScope" xsi:type="string">total_numbers</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">true</item>
						<item name="validate-number" xsi:type="boolean">true</item>
						<item name="validate-greater-than-zero" xsi:type="boolean">true</item>
						<item name="less-than-equals-to" xsi:type="number">100000</item>
					</item>
					<item name="notice" translate="true" xsi:type="string">The total random numbers to generate for each raffles.</item>
				</item>
			</argument>
		</field>
		<field name="total_raffles">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="dataType" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Total Raffles</item>
					<item name="formElement" xsi:type="string">input</item>
					<item name="source" xsi:type="string">Test</item>
					<item name="sortOrder" xsi:type="number">220</item>
					<item name="dataScope" xsi:type="string">total_raffles</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">true</item>
						<item name="validate-number" xsi:type="boolean">true</item>
						<item name="validate-greater-than-zero" xsi:type="boolean">true</item>
						<item name="less-than-equals-to" xsi:type="number">100000</item>
					</item>
					<item name="notice" translate="true" xsi:type="string">The total times to run RNG function or total raffles created.</item>
				</item>
			</argument>
		</field>
	</fieldset>
</form>
